{  
  "name": "Scroll Companion",  
  "description": "A timer for you",  
  "version": "1.0",  
  "manifest_version": 2,
  "background": {    
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts":[
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js", "jquery3.6.0.slim.js", "js/popup.js"]
    }
  ],
  "permissions": [
    "storage", 
    "tabs",
    "alarms",
    "notifications"
    ],
  "browser_action": {    
    "default_popup": "popup.html",
    "default_icon": {      
      "16": "/images/pixel_waterfall_16.png",
      "32": "/images/pixel_waterfall_32.png",      
      "48": "/images/pixel_waterfall_48.png",
      "128": "/images/pixel_waterfall_128.png"    
    }
  },
  "icons": {    
    "16": "/images/pixel_waterfall_16.png",    
    "32": "/images/pixel_waterfall_32.png",    
    "48": "/images/pixel_waterfall_48.png",    
    "128": "/images/pixel_waterfall_128.png"  
  }
}



